{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run Clang-Tidy",
            "type": "shell",
            "command": "clang-tidy",
            "args": [
                "-system-headers=0",
                "-fix-errors",
                "--fix",
                "--format-style=file",
                "${file}"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}